<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--actionBar-->
        <item name="colorPrimary">#4e5154</item>
        <!--statusBar-->
        <item name="colorPrimaryDark">#4e5154</item>
        <!--widget-->
        <item name="colorAccent">#4e5154</item>
    </style>

    <style name="TextStyleWhite">
        <item name="android:textSize">@dimen/textSize_18</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyAlertDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/alert_dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ViewHorizontalWeightWidget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
