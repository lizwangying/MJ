<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    tools:context="com.liz.mj.activity.AddCommentsActivity"
    android:orientation="vertical">

    <LinearLayout
        style="@style/LinearLayoutHorizontalPadding"
        android:background="@color/darker_grey"
        >
        <ImageView
            android:paddingTop="@dimen/height_10"
            android:paddingBottom="@dimen/height_10"
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back_normal"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_300"
        android:background="@color/white"
        tools:text="sdfsdfsd"
        android:gravity="start"
        android:padding="@dimen/height_10"
        />

    <LinearLayout
        style="@style/LinearLayoutHorizontalPadding"
        android:padding="@dimen/height_10"
        >
        <ImageView
            android:id="@+id/icon_add_photo"
            android:layout_width="@dimen/height_30"
            android:layout_height="@dimen/height_30"
            android:background="@mipmap/icon_small_pic"
            android:padding="@dimen/height_10"/>
    </LinearLayout>

</LinearLayout>
