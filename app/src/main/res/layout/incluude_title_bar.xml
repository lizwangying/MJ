<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:layout_marginTop="@dimen/height_10"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_back_normal"
        android:layout_marginBottom="@dimen/height_5"
        android:layout_marginTop="@dimen/height_5"
        />
    <View
       style="@style/ViewHorizontalWeightWidget"/>
    <ImageView
        android:id="@+id/icon_add_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_edit"
        android:padding="@dimen/height_10"/>
</LinearLayout>
