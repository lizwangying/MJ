<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragment.FragmentDiscover"
    >

    <LinearLayout
        android:layout_width="match_parent"
        style="@style/LinearLayoutVertical">
        <LinearLayout
            style="@style/LinearLayoutVertical"
            android:layout_width="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_300"
                android:background="@drawable/bg_black_transparent"
                />
            <LinearLayout
                android:layout_marginLeft="@dimen/height_20"
                style="@style/LinearLayoutVertical">
                <TextView
                    style="@style/TextViewParentGrey"
                    tools:text="haha_username"
                    />
                <TextView
                    style="@style/TextViewMoreStyle"
                    tools:text="rank"/>
            </LinearLayout>

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_discover"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            tools:listitem="@layout/grid_view_hot_albums"
            android:layout_marginBottom="@dimen/height_10"
            />

    </LinearLayout>

</ScrollView>
